<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.views.LoginUser">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Margin="50" Spacing="20">
            <Image Source="Usuario.png" />
            <Entry Placeholder="Usuario" x:Name="txtUsuario" MaxLength="10"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="txtPassword" MaxLength="22"/>
            <Button Text="Ingresar" VerticalOptions="EndAndExpand" CornerRadius="10" Clicked="Ingresar_clicked"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>